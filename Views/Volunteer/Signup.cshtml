@model DisasterAlleviation.Models.Volunteer
@{
    ViewData["Title"] = "Volunteer Signup";
}

<div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-sm sm:max-w-md lg:max-w-lg mx-auto mt-10">
    <h2 class="text-3xl font-extrabold text-gray-800 mb-6 text-center">Volunteer Signup</h2>

    <form asp-action="Signup" method="post" class="space-y-6">
        <!-- Name -->
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Name" placeholder="Enter your full name"
                   class="mt-1 block w-full px-4 py-2 bg-gray-50 border border-gray-300
                          rounded-lg shadow-sm focus:outline-none focus:ring-sky-500 focus:border-sky-500 text-gray-900" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <!-- Phone -->
        <div>
            <label asp-for="Phone" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Phone" placeholder="e.g., +27 123 456 789"
                   class="mt-1 block w-full px-4 py-2 bg-gray-50 border border-gray-300
                          rounded-lg shadow-sm focus:outline-none focus:ring-sky-500 focus:border-sky-500 text-gray-900" />
            <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
        </div>

        <!-- Skills -->
        <div>
            <label asp-for="Skills" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Skills" placeholder="e.g., Medical, Construction, Food Prep"
                   class="mt-1 block w-full px-4 py-2 bg-gray-50 border border-gray-300
                          rounded-lg shadow-sm focus:outline-none focus:ring-sky-500 focus:border-sky-500 text-gray-900" />
        </div>

        <!-- Submit -->
        <button type="submit"
                class="w-full py-3 px-4 bg-sky-600 hover:bg-sky-700 text-white font-bold rounded-xl shadow-md
                       transition duration-200 ease-in-out transform hover:scale-105 focus:outline-none
                       focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
            Sign Up
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
